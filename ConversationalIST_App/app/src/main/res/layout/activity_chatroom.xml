<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" tools:context = ".activities.ChatroomActivity"
    android:id="@+id/relativeLayout">

    <TextView android:text = "@string/chatrooms" android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "35sp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/conversationalist"
        android:id = "@+id/app_name"
        android:layout_below = "@+id/textview"
        android:layout_centerHorizontal = "true"
        android:textColor = "#ff7aff24"
        android:textSize = "35sp" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/username"
        android:layout_below = "@+id/app_name"
        android:layout_centerHorizontal = "true"
        android:textColor = "#009688"
        android:textSize = "35sp" />

   <!-- <Button
        android:id="@+id/chat_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:onClick="enterChat"
        android:text="@string/cmu_chat" />
        -->

    <Button
        android:id="@+id/create_chatroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="create_chatroom"
        android:layout_alignParentBottom="true"
        android:text="@string/create_new_chatroom" />

    <ListView
        android:id="@+id/my_chat_list"
        android:layout_width="310dp"
        android:layout_height="309dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="24dp" />

</RelativeLayout>